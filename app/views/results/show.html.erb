<div class="content">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2 class="text-center"><%= @result.passed ? "Congrats !" : "Woops..." %></h2>
      <p class="text-center">You <%= @result.passed ? "passed" : "failed" %> the quizz, with a score of <%= @result.score %> points out of 5.</p><br/>
      <div class="row mt-3">
        <div class="col-12 text-center">
          <%= link_to "Go back to all quizzes", quizzes_path, class: "btn btn-outline-secondary" %>
          <%= link_to "Back to your dashboard", root_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
