<div class="content">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2 class="text-center">Welcome !</h2>
      <p class="text-center">You have attempted <%= @results.length %> quizzes, for a total score of <%= @total_score %> points.</p>
      <p class="text-center">You have passed <%= @total_wins %> of them.</p>
      <div class="row mt-3">
        <div class="col-12 text-center">
          <%= link_to "Check out all our quizzes!", quizzes_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
      <h3 class="text-center mt-4"><%= @results.any? ? "Your last attempts:" : "" %></h3>
      <% @results.reverse.each do |result| %>
        <div class="card text-center my-3">
          <div class="card-body">
            <%= render 'shared/result_details', result: result %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
